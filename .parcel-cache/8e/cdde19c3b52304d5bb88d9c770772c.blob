body {
  background: #eee;
}
.globalHeader {
}
.searchForm {
  margin: 20px;
  display: flex;
  justify-content: space-between;
  max-width: 600px;
}
@media (min-width: 500px) {
}
.searchForm > input {
  width: 100%;
  margin-right: 10px;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}
.searchForm > button {
  white-space: nowrap;
  padding: 0 28px;
  border: none;
  border-radius: 5px;
  background: #45b6f7;
  color: #fff;
  font-size: 16px;
}
.globalMain {
}
.siteList {
  display: flex;
  flex-wrap: wrap;
  margin: 20px;
  justify-content: space-between;
  border: 1px solid red;
}
.siteList > li {
  margin-bottom: 20px;
  border: 1px solid blue;
}
.siteList .site {
  height: 150px;
  width: 150px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 5px;
  position: relative;
}
.siteList .site > .logo {
  width: 64px;
  height: 64px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 64px;
  text-transform: uppercase;
}
.siteList .site > .link {
  font-size: 14px;
  margin-top: 15px;
}
.siteList .site > .close {
  position: absolute;
  right: 5px;
  top: 5px;
}
